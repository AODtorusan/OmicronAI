<configuration scan="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%12d{HH:mm:ss.SSS} %logger{15} [%-5level] - %msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="be.angelcorp" level="TRACE" />
    <logger name="com.lyndir" level="DEBUG" />
    <logger name="org.bushe" level="INFO" />

    <root level="TRACE">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
