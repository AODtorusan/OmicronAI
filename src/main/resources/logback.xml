<configuration scan="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%12d{HH:mm:ss.SSS} %logger{15} [%-5level] - %msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="be.angelcorp" level="TRACE" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
